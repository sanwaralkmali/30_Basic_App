<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="table_column">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/LightSteelBlue</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="table_data">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@color/WhiteSmoke</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>

    <style name="new_cantact_label">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
    </style>

    <style name="new_cantact_text">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>
</resources>
